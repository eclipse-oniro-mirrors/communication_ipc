group("unittest") {
  testonly = true
  deps = [
    ":BinderConnectorTest",
    ":BinderDebugUnitTest",
    ":BinderInvokerUnitTest",
    ":DatabusSocketListenerTest",
    ":HitraceInvokerTest",
    ":IPCBlockThreadTest",
    ":IPCFileDescOpsTest",
    ":IPCMockUnitTest",
    ":IPCNativeUnitTest",
    ":IPCSoDlcloseTest",
    ":IPCTraceUnitTest",
    ":InvokerFactoryTest",
    ":InvokerRawDataTest",
    ":IpcCApiUnitTest",
    ":MessageParcelTest",
    ":RPCFeatureUnitTest",
  ]
  if (support_jsapi) {
    deps += [ ":IPCNapiUnitTest" ]
  }
}
