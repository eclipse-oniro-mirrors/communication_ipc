ipc_unittest("HitraceInvokerTest") {
  sources = [
    "$IPC_CORE_ROOT/src/core/framework/source/process_skeleton.cpp",
    "$IPC_CORE_ROOT/src/core/invoker/source/hitrace_invoker.cpp",
