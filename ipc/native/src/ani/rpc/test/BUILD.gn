import("//build/config/components/ets_frontend/ets2abc_config.gni")

generate_static_abc("test_abc") {
  base_url = "."
  files = [ "./test.ets" ]
  dst_file = "$target_out_dir/test.abc"
  out_puts = [ "$target_out_dir/test.abc" ]
  is_boot_abc = "True"
  device_dst_file = "/system/framework/test.abc"
}

ohos_prebuilt_etc("test_abc_etc") {
  source = "$target_out_dir/test.abc"
  module_install_dir = "framework"
  subsystem_name = "communication"
  part_name = "ipc"
  deps = [ ":test_abc" ]
}

group("test_ani") {
  deps = [ ":test_abc_etc" ]
}
