ohos_executable("ipc_server_test_extra") {
  sources = [ "./src/main_server.cpp" ]

  configs = [
    "$SUBSYSTEM_DIR/config:ipc_util_config",
    "$IPC_TEST_ROOT:ipc_test_config",
  ]

  deps = [ ":ipc_test_helper_extra" ]

  external_deps = [
    "access_token:libnativetoken_shared",
