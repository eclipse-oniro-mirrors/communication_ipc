#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")
SUBSYSTEM_DIR = "../../../../../"

##############################fuzztest##########################################
ohos_fuzztest("CloseDatabusSessionFuzzTest") {
  module_out_path = "ipc/ipc"
  fuzz_config_file =
      "$SUBSYSTEM_DIR/services/dbinder/test/fuzztest/closedatabussession_fuzzer"
  include_dirs = [
    "//utils/system/safwk/native/include",
    "$SUBSYSTEM_DIR/interfaces/innerkits/libdbinder/include",
    "$SUBSYSTEM_DIR/ipc/native/src/core/include/",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fstack-protector-strong",
  ]

  configs = [ "$SUBSYSTEM_DIR/config:dsoftbus_header_deps_config" ]

  sources = [ "closedatabussession_fuzzer.cpp" ]
  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:libdbinder",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":CloseDatabusSessionFuzzTest",
  ]
}
